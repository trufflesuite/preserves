{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "..",
    "lib": ["es2017"],
    "paths": {
      "@truffle/preserve": ["../preserve/lib"],
      "@truffle/preserve/*": ["../preserve/lib/*"]
    },
    "rootDir": "../..",
    "types": [
      "node"
    ]
  },
  "include": [
    "./lib/**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
